<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.yihang.a428app.matchlist">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Matches"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight ="15dp"
                app:srcCompat="@drawable/ic_action_name"
                android:id="@+id/settingicon"
                android:tint = "@color/DarkSlateGray"
                android:background="@null"
                android:elevation="40dp" />
        </android.support.v7.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="513dp"
            android:background="@color/MintCream">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="469dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="40dp"
                    android:id="@+id/match1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/profile1"
                        android:adjustViewBounds="true"
                        android:maxWidth="80dp"
                        android:maxHeight="80dp"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="Leonard"
                        android:textSize="15sp"
                        android:typeface="monospace"
                        android:ems="10"
                        android:id="@+id/matchname1"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="40dp"
                    android:id="@+id/match2"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/profile2"
                        android:adjustViewBounds="true"
                        android:maxWidth="80dp"
                        android:maxHeight="80dp"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="Thomas"
                        android:textSize="15sp"
                        android:typeface="monospace"
                        android:ems="10"
                        android:id="@+id/matchname2"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="40dp"
                    android:id="@+id/match3"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/profile3"
                        android:adjustViewBounds="true"
                        android:maxWidth="80dp"
                        android:maxHeight="80dp"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="Jenny"
                        android:textSize="15sp"
                        android:typeface="monospace"
                        android:ems="10"
                        android:id="@+id/matchname3"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content" />
                </TableRow>

            </TableLayout>



    </ScrollView>

    </android.support.design.widget.AppBarLayout>







</android.support.design.widget.CoordinatorLayout>
